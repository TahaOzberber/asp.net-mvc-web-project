@model List<KitapTuru>    // Razor View Engine, C# kodunu okur


@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}

<div class="container">

    <div class="row pt-3 pb-4">
        <div>
            <h1>Kitap Türleri</h1>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kitap Türü</th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var kitapTuru in Model)
            {
                <tr>
                    <td align="center" valign="middle">
                        @kitapTuru.Id
                    </td>
                    <td align="center" valign="middle">
                        @kitapTuru.Ad
                    </td>
                    <td align="center" valign="middle">
                        <a asp-controller="KitapTuru" asp-action="Guncelle" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-success" style="width:160px">
                            Güncelle
                        </a>
                    </td>
                    <td align="center" valign="middle">
                        <a asp-controller="KitapTuru" asp-action="Sil" asp-route-id="@kitapTuru.Id" type="button" class="btn btn-danger" style="width:160px">
                            Sil
                        </a>
                    </td>              
                </tr>
            }
        </tbody>
    </table>

    <div class="row pt-3 pb-2">
        <div>
            <a asp-contoller="KitapTuru" asp-action="Ekle" class="btn btn-lg btn-primary" type="button">
                Yeni Kitap Türü Oluştur
            </a>
        </div>
    </div>

</div>